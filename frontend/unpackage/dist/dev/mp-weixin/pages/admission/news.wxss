.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}
.header {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.loading-container .loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3399cc;
  border-radius: 50%;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
}
.loading-container .loading-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
.news-list .news-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.news-list .news-item .news-content {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}
.news-list .news-item .news-content .news-info {
  flex: 1;
}
.news-list .news-item .news-content .news-info .news-title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: block;
}
.news-list .news-item .news-content .news-info .news-date {
  font-size: 24rpx;
  color: #999;
}
.news-list .news-item .news-content .news-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
}
.news-list .news-item .news-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}
