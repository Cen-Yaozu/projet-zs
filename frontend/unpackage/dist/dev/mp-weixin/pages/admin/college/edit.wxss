.container {
  min-height: 100vh;
  background-color: #f6f8fa;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  padding: 20rpx 30rpx;
  height: 90rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.2);
  position: relative;
  z-index: 10;
}
.header .back-button {
  font-size: 40rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.2s;
}
.header .back-button:active {
  opacity: 0.7;
}
.header .title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  flex: 1;
}
.form-container {
  flex: 1;
  padding-bottom: 150rpx;
}
.form-container .scroll-view {
  height: calc(100vh - 240rpx);
  padding: 30rpx;
}
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: box-shadow 0.3s, -webkit-transform 0.3s;
  transition: transform 0.3s, box-shadow 0.3s;
  transition: transform 0.3s, box-shadow 0.3s, -webkit-transform 0.3s;
}
.form-section:hover {
  -webkit-transform: translateY(-2rpx);
          transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}
.form-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}
.form-section .section-title:before {
  content: "";
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(to bottom, #4aa3ff, #3a93f0);
  border-radius: 3rpx;
}
.form-item {
  margin-bottom: 30rpx;
}
.form-item:last-child {
  margin-bottom: 0;
}
.form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  font-weight: 500;
}
.form-item .label .required {
  color: #ff4d4f;
  font-weight: bold;
}
.form-item .input, .form-item .picker-value, .form-item .textarea {
  width: 100%;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.form-item .input:focus, .form-item .picker-value:focus, .form-item .textarea:focus {
  border-color: #4aa3ff;
  box-shadow: 0 0 0 3rpx rgba(74, 163, 255, 0.1);
}
.form-item .picker-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}
.form-item .picker-value .iconfont {
  font-size: 28rpx;
  color: #999;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.form-item .picker-value:active .iconfont {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.form-item .textarea {
  height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}
.form-item .word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.form-item .hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.form-item .upload-area {
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
}
.form-item .upload-area .preview-image {
  width: 200rpx;
  height: 200rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.form-item .upload-area .preview-image:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.form-item .upload-area .upload-placeholder {
  width: 200rpx;
  height: 200rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}
.form-item .upload-area .upload-placeholder:active {
  background-color: #eef6ff;
  border-color: #4aa3ff;
}
.form-item .upload-area .upload-placeholder .iconfont {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.form-item .upload-area .upload-placeholder .upload-text {
  font-size: 26rpx;
  color: #999;
}
.form-item .upload-area .upload-btn {
  height: 70rpx;
  line-height: 70rpx;
  background-color: #e6f7ff;
  color: #4aa3ff;
  font-size: 26rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.15);
}
.form-item .upload-area .upload-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(74, 163, 255, 0.1);
}
.form-item .images-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.form-item .images-list .image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.form-item .images-list .image-item .preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #f6f8fa;
  object-fit: cover;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.form-item .images-list .image-item .preview-image:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.form-item .images-list .image-item .delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50%;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
  transition: all 0.3s;
}
.form-item .images-list .image-item .delete-btn:active {
  -webkit-transform: scale(1.1);
          transform: scale(1.1);
  box-shadow: 0 3rpx 12rpx rgba(255, 77, 79, 0.4);
}
.form-item .images-list .image-item.add-image {
  background-color: #f6f8fa;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}
.form-item .images-list .image-item.add-image:active {
  background-color: #eef6ff;
  border-color: #4aa3ff;
}
.form-item .images-list .image-item.add-image .iconfont {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.form-item .images-list .image-item.add-image .add-text {
  font-size: 26rpx;
  color: #999;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}
.footer button {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
  transition: all 0.3s;
}
.footer button.cancel-btn {
  background-color: #f6f8fa;
  color: #666;
  margin-right: 20rpx;
}
.footer button.cancel-btn:active {
  background-color: #eee;
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
}
.footer button.submit-btn {
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.3);
}
.footer button.submit-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.2);
}
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
}
.loading-overlay .loading-content {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
  -webkit-animation: pulse 1.5s infinite alternate;
          animation: pulse 1.5s infinite alternate;
}
@-webkit-keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.loading-overlay .loading-content .loading-text {
  color: #fff;
  font-size: 28rpx;
}
