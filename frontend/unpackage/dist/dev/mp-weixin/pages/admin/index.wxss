.admin-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}
.admin-container .header {
  background: linear-gradient(135deg, #4aa3ff, #3a8fe0);
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 163, 255, 0.2);
}
.admin-container .header .title {
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  display: block;
}
.admin-container .header .welcome {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}
.admin-container .menu-list .menu-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
}
.admin-container .menu-list .menu-item .menu-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(74, 163, 255, 0.1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.admin-container .menu-list .menu-item .menu-content {
  flex: 1;
}
.admin-container .menu-list .menu-item .menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.admin-container .menu-list .menu-item .menu-desc {
  font-size: 26rpx;
  color: #666;
}
.admin-container .menu-list .menu-item:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
  opacity: 0.9;
}
