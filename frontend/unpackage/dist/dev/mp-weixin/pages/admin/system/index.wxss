.container {
  min-height: 100vh;
  background-color: #f6f8fa;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  padding: 20rpx 30rpx;
  height: 90rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.2);
  position: relative;
  z-index: 10;
}
.header .back-button {
  font-size: 40rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.2s;
}
.header .back-button:active {
  opacity: 0.7;
}
.header .title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  flex: 1;
}
.content {
  flex: 1;
  padding: 30rpx;
}
.content .setting-groups .setting-card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: box-shadow 0.3s, -webkit-transform 0.3s;
  transition: transform 0.3s, box-shadow 0.3s;
  transition: transform 0.3s, box-shadow 0.3s, -webkit-transform 0.3s;
}
.content .setting-groups .setting-card:hover {
  -webkit-transform: translateY(-2rpx);
          transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}
.content .setting-groups .setting-card .card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.content .setting-groups .setting-card .card-header .card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
}
.content .setting-groups .setting-card .card-header .card-title .title-icon {
  font-size: 36rpx;
  color: #4aa3ff;
  margin-right: 16rpx;
}
.content .setting-groups .setting-card .setting-list .setting-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.content .setting-groups .setting-card .setting-list .setting-item:last-child {
  border-bottom: none;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-label {
  width: 240rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  padding-right: 20rpx;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor {
  flex: 1;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .input {
  width: 100%;
  height: 80rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .input:focus {
  border-color: #4aa3ff;
  box-shadow: 0 0 0 3rpx rgba(74, 163, 255, 0.1);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .textarea:focus {
  border-color: #4aa3ff;
  box-shadow: 0 0 0 3rpx rgba(74, 163, 255, 0.1);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .picker-value {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .picker-value .iconfont {
  font-size: 24rpx;
  color: #999;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .picker-value:active .iconfont {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .switch {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
  margin-left: -10rpx;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .logo-preview {
  position: relative;
  width: 200rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .logo-preview .logo-image {
  max-width: 180rpx;
  max-height: 100rpx;
  border-radius: 4rpx;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .logo-preview .logo-remove {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 44rpx;
  height: 44rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.25);
  z-index: 2;
  transition: all 0.3s;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .logo-preview .logo-remove:active {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .upload-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.3);
  transition: all 0.3s;
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .upload-button:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.2);
}
.content .setting-groups .setting-card .setting-list .setting-item .setting-editor .upload-button .upload-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.content .setting-groups .setting-card .card-actions {
  display: flex;
  justify-content: flex-end;
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}
.content .setting-groups .setting-card .card-actions button {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  transition: all 0.3s;
}
.content .setting-groups .setting-card .card-actions button .button-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.content .setting-groups .setting-card .card-actions button.test-button {
  background-color: #f9f0ff;
  color: #722ed1;
  box-shadow: 0 4rpx 16rpx rgba(114, 46, 209, 0.15);
}
.content .setting-groups .setting-card .card-actions button.test-button:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(114, 46, 209, 0.1);
}
.content .setting-groups .setting-card .card-actions button.save-button {
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.3);
}
.content .setting-groups .setting-card .card-actions button.save-button:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.2);
}
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
}
.loading-overlay .loading-content {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
  -webkit-animation: pulse 1.5s infinite alternate;
          animation: pulse 1.5s infinite alternate;
}
@-webkit-keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.loading-overlay .loading-content .loading-text {
  color: #fff;
  font-size: 28rpx;
}
