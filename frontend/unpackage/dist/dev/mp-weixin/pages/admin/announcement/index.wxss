.container {
  min-height: 100vh;
  background-color: #f6f8fa;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  padding: 20rpx 30rpx;
  height: 90rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.2);
  position: relative;
  z-index: 10;
}
.header .back-button {
  font-size: 40rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.2s;
}
.header .back-button:active {
  opacity: 0.7;
}
.header .title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  flex: 1;
}
.content {
  flex: 1;
  padding: 30rpx;
}
.content .filter-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: box-shadow 0.3s;
}
.content .filter-bar:hover {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}
.content .filter-bar .search-box {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.content .filter-bar .search-box .search-icon {
  font-size: 32rpx;
  color: #999;
}
.content .filter-bar .search-box .input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: none;
  background: transparent;
}
.content .filter-bar .search-box .clear-icon {
  font-size: 32rpx;
  color: #999;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.content .filter-bar .search-box .clear-icon:active {
  -webkit-transform: scale(1.2);
          transform: scale(1.2);
}
.content .filter-bar .add-button {
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.3);
  transition: all 0.3s;
  flex-shrink: 0;
}
.content .filter-bar .add-button:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.2);
}
.content .filter-bar .add-button .add-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}
.content .announcement-list .announcement-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: box-shadow 0.3s, -webkit-transform 0.3s;
  transition: transform 0.3s, box-shadow 0.3s;
  transition: transform 0.3s, box-shadow 0.3s, -webkit-transform 0.3s;
}
.content .announcement-list .announcement-item:hover {
  -webkit-transform: translateY(-2rpx);
          transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}
.content .announcement-list .announcement-item .announce-info .announce-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.content .announcement-list .announcement-item .announce-info .announce-header .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}
.content .announcement-list .announcement-item .announce-info .announce-header .status-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}
.content .announcement-list .announcement-item .announce-info .announce-header .status-tag.active {
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
}
.content .announcement-list .announcement-item .announce-info .announce-header .status-tag.inactive {
  color: #faad14;
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
}
.content .announcement-list .announcement-item .announce-info .announce-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}
.content .announcement-list .announcement-item .announce-info .announce-meta .meta-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}
.content .announcement-list .announcement-item .announce-info .announce-meta .meta-item .meta-icon {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}
.content .announcement-list .announcement-item .announce-info .announce-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .announcement-list .announcement-item .action-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}
.content .announcement-list .announcement-item .action-row .action-button {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  transition: all 0.3s;
}
.content .announcement-list .announcement-item .action-row .action-button.edit-btn {
  background-color: #e6f7ff;
  color: #4aa3ff;
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.15);
}
.content .announcement-list .announcement-item .action-row .action-button.edit-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(74, 163, 255, 0.1);
}
.content .announcement-list .announcement-item .action-row .action-button.publish-btn {
  background-color: #f6ffed;
  color: #52c41a;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.15);
}
.content .announcement-list .announcement-item .action-row .action-button.publish-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(82, 196, 26, 0.1);
}
.content .announcement-list .announcement-item .action-row .action-button.unpublish-btn {
  background-color: #fffbe6;
  color: #faad14;
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.15);
}
.content .announcement-list .announcement-item .action-row .action-button.unpublish-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(250, 173, 20, 0.1);
}
.content .announcement-list .announcement-item .action-row .action-button.delete-btn {
  background-color: #fff0f0;
  color: #ff4d4f;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.15);
}
.content .announcement-list .announcement-item .action-row .action-button.delete-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(255, 77, 79, 0.1);
}
.content .empty-tip {
  padding: 100rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
.content .empty-tip .empty-icon {
  font-size: 96rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}
.content .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.content .pagination .page-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin: 0 10rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}
.content .pagination .page-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.03);
}
.content .pagination .page-btn.prev-btn, .content .pagination .page-btn.next-btn {
  width: 120rpx;
}
.content .pagination .page-btn.active {
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.2);
}
.content .pagination .page-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}
.content .pagination .page-text {
  margin: 0 20rpx;
  font-size: 26rpx;
  color: #999;
}
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
}
.loading-overlay .loading-content {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
  -webkit-animation: pulse 1.5s infinite alternate;
          animation: pulse 1.5s infinite alternate;
}
@-webkit-keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.loading-overlay .loading-content .loading-text {
  color: #fff;
  font-size: 28rpx;
}
