.container {
  min-height: 100vh;
  background-color: #f6f8fa;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  padding: 20rpx 30rpx;
  height: 90rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 163, 255, 0.2);
  position: relative;
  z-index: 10;
}
.header .back-button, .header .preview-button {
  font-size: 40rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.2s;
}
.header .back-button:active, .header .preview-button:active {
  opacity: 0.7;
}
.header .title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  flex: 1;
}
.content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}
.form-container {
  flex: 1;
  overflow: auto;
}
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.form-item {
  margin-bottom: 30rpx;
}
.form-item:last-child {
  margin-bottom: 0;
}
.form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  font-weight: 500;
}
.form-item .label .required {
  color: #ff4d4f;
  font-weight: bold;
}
.form-item .label .tip {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 10rpx;
}
.form-item .input {
  width: 100%;
  height: 80rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.form-item .input:focus {
  border-color: #4aa3ff;
  box-shadow: 0 0 0 3rpx rgba(74, 163, 255, 0.1);
}
.form-item .textarea {
  width: 100%;
  height: 360rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.form-item .textarea:focus {
  border-color: #4aa3ff;
  box-shadow: 0 0 0 3rpx rgba(74, 163, 255, 0.1);
}
.form-item .word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.form-item .picker-value {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.form-item .picker-value .iconfont {
  font-size: 24rpx;
  color: #999;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.form-item .picker-value:active .iconfont {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.form-item .status-selector {
  display: flex;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f6f8fa;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.form-item .status-selector .status-option {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}
.form-item .status-selector .status-option.active {
  background-color: #4aa3ff;
  color: #fff;
  font-weight: 500;
}
.form-item .status-selector .status-option:active {
  opacity: 0.8;
}
.form-item .upload-area {
  width: 100%;
  height: 200rpx;
  background-color: #f6f8fa;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}
.form-item .upload-area .iconfont {
  font-size: 56rpx;
  color: #bbb;
  margin-bottom: 20rpx;
}
.form-item .upload-area .upload-text {
  font-size: 28rpx;
  color: #999;
}
.form-item .upload-area:active {
  background-color: #eef1f5;
}
.form-item .image-preview {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
.form-item .image-preview .preview-image {
  width: 100%;
  height: 100%;
}
.form-item .image-preview .image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: flex-end;
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
}
.form-item .image-preview .image-actions .action-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
}
.form-item .image-preview .image-actions .action-icon .iconfont {
  font-size: 32rpx;
  color: #666;
}
.form-item .image-preview .image-actions .action-icon:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.action-buttons button {
  width: 45%;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
  border-radius: 46rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}
.action-buttons button.cancel-btn {
  background-color: #f6f8fa;
  color: #666;
}
.action-buttons button.cancel-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.action-buttons button.submit-btn {
  background: linear-gradient(135deg, #4aa3ff 0%, #3a93f0 100%);
  color: #fff;
  font-weight: 500;
}
.action-buttons button.submit-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.2);
}
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
}
.loading-overlay .loading-content {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
  -webkit-animation: pulse 1.5s infinite alternate;
          animation: pulse 1.5s infinite alternate;
}
@-webkit-keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes pulse {
0% {
    -webkit-transform: scale(0.95);
            transform: scale(0.95);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
.loading-overlay .loading-content .loading-text {
  color: #fff;
  font-size: 28rpx;
}
.preview-popup {
  width: 650rpx;
  height: 800rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}
.preview-popup .preview-header {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.preview-popup .preview-header .preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.preview-popup .preview-header .preview-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
  transition: all 0.2s;
}
.preview-popup .preview-header .preview-close:active {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.preview-popup .preview-content {
  flex: 1;
  padding: 30rpx;
}
.preview-popup .preview-article .article-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}
.preview-popup .preview-article .article-meta {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.preview-popup .preview-article .article-meta .article-type {
  font-size: 24rpx;
  color: #4aa3ff;
  background-color: rgba(74, 163, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.preview-popup .preview-article .article-meta .article-date {
  font-size: 24rpx;
  color: #999;
}
.preview-popup .preview-article .article-cover {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.preview-popup .preview-article .article-body {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
  white-space: pre-wrap;
}
.category-selector {
  display: flex;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f6f8fa;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.category-selector .category-option {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}
.category-selector .category-option.active {
  background-color: #4aa3ff;
  color: #fff;
  font-weight: 500;
}
.category-selector .category-option:active {
  opacity: 0.8;
}
