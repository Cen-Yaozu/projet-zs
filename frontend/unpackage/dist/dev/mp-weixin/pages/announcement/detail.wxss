.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 30rpx;
}
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.loading-container .loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3399cc;
  border-radius: 50%;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
}
.loading-container .loading-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.announcement-detail {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}
.announcement-detail .detail-header {
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.announcement-detail .detail-header .detail-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  line-height: 1.4;
}
.announcement-detail .detail-header .tag-row {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.announcement-detail .detail-header .detail-tag {
  background-color: #ff6b6b;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
}
.announcement-detail .detail-header .detail-time {
  font-size: 24rpx;
  color: #999;
}
.announcement-detail .detail-content {
  padding: 40rpx;
  line-height: 1.8;
  color: #333;
  font-size: 28rpx;
}
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.error-container .error-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.error-container .back-btn {
  background-color: #3399cc;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 50rpx;
  border: none;
}
