.home-container {
  min-height: 100vh;
  background-color: #f5f7fa;
}
.home-banner {
  position: relative;
  width: 100%;
  height: 400rpx;
}
.home-banner__image {
  width: 100%;
  height: 100%;
}
.home-banner__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.4));
  display: flex;
  align-items: center;
  padding: 40rpx;
}
.home-banner__content {
  -webkit-animation: fadeInUp 0.8s;
          animation: fadeInUp 0.8s;
}
.home-banner__title {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  display: block;
  margin-bottom: 12rpx;
}
.home-banner__subtitle {
  font-size: 36rpx;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  opacity: 0.9;
}
.home-nav {
  margin: -40rpx 20rpx 20rpx;
  position: relative;
  z-index: 10;
}
.home-nav__card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.home-nav__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}
.home-nav__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}
.home-nav__item:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.home-nav__icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}
.home-nav__item:active .home-nav__icon-wrapper {
  -webkit-transform: translateY(-5rpx);
          transform: translateY(-5rpx);
}
.home-nav__icon {
  width: 60rpx;
  height: 60rpx;
}
.home-nav__text {
  font-size: 28rpx;
  color: #444444;
  line-height: 1.4;
  text-align: center;
}
.home-section {
  margin: 30rpx 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.home-section__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #e8eaed;
}
.home-section__title {
  font-size: 36rpx;
  font-weight: 500;
  color: #222222;
  display: flex;
  align-items: center;
}
.home-section__title-icon {
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background-color: #4aa3ff;
  margin-right: 16rpx;
  border-radius: 8rpx;
}
.home-section__more {
  font-size: 28rpx;
  color: #666666;
}
.home-section__more:active {
  color: #4aa3ff;
}
.home-tabs__header {
  display: flex;
  border-bottom: 1rpx solid #e8eaed;
  background-color: #f5f7fa;
}
.home-tabs__item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  transition: all 0.3s ease;
}
.home-tabs__item--active {
  color: #4aa3ff;
  font-weight: 500;
}
.home-tabs__item--active::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4aa3ff;
  border-radius: 8rpx;
}
.home-tabs__item--active .home-tabs__text {
  color: #4aa3ff;
}
.home-tabs__text {
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}
.home-tabs__content {
  height: 800rpx;
}
.home-tabs__scroll {
  height: 100%;
}
.home-news {
  padding: 10rpx 20rpx;
}
.home-news__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}
.home-news__empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}
.home-news__empty-text {
  font-size: 28rpx;
  color: #9e9e9e;
}
.home-news__item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #e8eaed;
  transition: all 0.3s ease;
  -webkit-animation: fadeInRight 0.5s both;
          animation: fadeInRight 0.5s both;
}
.home-news__item:active {
  background-color: #f5f7fa;
  -webkit-transform: translateX(5rpx);
          transform: translateX(5rpx);
}
.home-news__content {
  flex: 1;
  margin-right: 20rpx;
}
.home-news__title {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.home-news__meta {
  display: flex;
  align-items: center;
}
.home-news__date {
  font-size: 24rpx;
  color: #9e9e9e;
  margin-right: 16rpx;
}
.home-news__tag {
  display: inline-block;
  font-size: 24rpx;
  color: #4aa3ff;
  background-color: rgba(74, 163, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.home-news__image {
  width: 180rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
}
@-webkit-keyframes fadeInRight {
from {
    opacity: 0;
    -webkit-transform: translateX(20rpx);
            transform: translateX(20rpx);
}
to {
    opacity: 1;
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
@keyframes fadeInRight {
from {
    opacity: 0;
    -webkit-transform: translateX(20rpx);
            transform: translateX(20rpx);
}
to {
    opacity: 1;
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
