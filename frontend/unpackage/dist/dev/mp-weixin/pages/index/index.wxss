.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
}
.notice-bar {
  background-color: #fff7e6;
  padding: 20rpx 30rpx;
}
.notice-text {
  font-size: 28rpx;
  color: #fa8c16;
}
.nav-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
}
.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.nav-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.nav-text {
  font-size: 24rpx;
  color: #333;
}
.news-section {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4aa3ff;
}
.news-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.news-item:last-child {
  border-bottom: none;
}
.news-content {
  display: flex;
  flex-direction: column;
}
.news-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}
.news-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

