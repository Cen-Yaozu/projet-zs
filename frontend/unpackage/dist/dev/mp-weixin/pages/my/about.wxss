.container {
  min-height: 100vh;
  background-color: #fff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}
.logo-section .logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.logo-section .app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.logo-section .version {
  font-size: 24rpx;
  color: #999;
}
.content-section {
  flex: 1;
}
.content-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4aa3ff;
}
.content-section .section-content {
  margin-bottom: 40rpx;
}
.content-section .section-content .content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.content-section .contact-list {
  margin-bottom: 40rpx;
}
.content-section .contact-list .contact-item {
  display: flex;
  margin-bottom: 16rpx;
}
.content-section .contact-list .contact-item:last-child {
  margin-bottom: 0;
}
.content-section .contact-list .contact-item .label {
  font-size: 28rpx;
  color: #666;
  width: 100rpx;
}
.content-section .contact-list .contact-item .value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
.footer {
  text-align: center;
  padding: 40rpx 0;
}
.footer .copyright {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 6rpx;
}
.footer .rights {
  font-size: 24rpx;
  color: #999;
}
