.login-container {
  position: relative;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  padding: 40rpx;
  overflow: hidden;
}
.login-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  overflow: hidden;
}
.login-shape {
  position: absolute;
  border-radius: 50%;
}
.login-shape--1 {
  width: 500rpx;
  height: 500rpx;
  background: linear-gradient(135deg, rgba(74, 163, 255, 0.1), rgba(74, 163, 255, 0.05));
  top: -200rpx;
  right: -100rpx;
}
.login-shape--2 {
  width: 600rpx;
  height: 600rpx;
  background: linear-gradient(135deg, rgba(49, 131, 224, 0.12), rgba(74, 163, 255, 0.06));
  bottom: -300rpx;
  left: -200rpx;
}
.login-shape--3 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, rgba(74, 163, 255, 0.07), rgba(49, 131, 224, 0.03));
  top: 30%;
  left: -150rpx;
}
.login-box {
  position: relative;
  z-index: 1;
  width: 90%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  padding: 50rpx 40rpx;
  -webkit-animation: fadeInUp 0.5s ease-out;
          animation: fadeInUp 0.5s ease-out;
}
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}
.login-header .login-logo {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  -webkit-animation: pulse 2s infinite;
          animation: pulse 2s infinite;
}
.login-header .login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #222222;
  margin-bottom: 16rpx;
}
.login-header .login-subtitle {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}
.login-form .login-input-group {
  position: relative;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 20rpx;
  border: 1px solid #e8eaed;
  transition: all 0.3s;
}
.login-form .login-input-group:focus-within {
  border-color: #4aa3ff;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(74, 163, 255, 0.25);
}
.login-form .login-input-group .login-input-icon {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666666;
  font-size: 36rpx;
}
.login-form .login-input-group .login-input {
  flex: 1;
  height: 90rpx;
  font-size: 32rpx;
  color: #222222;
  background-color: transparent;
  padding: 0 10rpx;
}
.login-form .login-input-group .login-input-action {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #9e9e9e;
}
.login-form .login-remember {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666666;
}
.login-form .login-remember .login-remember-checkbox {
  position: relative;
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  border: 1px solid #c0c0c0;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}
.login-form .login-remember .login-remember-checkbox--active {
  background-color: #4aa3ff;
  border-color: #4aa3ff;
}
.login-form .login-remember .login-remember-checkbox--active:after {
  content: "";
  position: absolute;
  width: 16rpx;
  height: 8rpx;
  border-left: 2px solid #ffffff;
  border-bottom: 2px solid #ffffff;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}
.login-form .login-button-group {
  margin-bottom: 30rpx;
}
.login-form .login-button-group .login-button {
  position: relative;
  width: 100%;
  height: 90rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.login-form .login-button-group .login-button--primary {
  background: linear-gradient(135deg, #4aa3ff, #3183e0);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(74, 163, 255, 0.25);
}
.login-form .login-button-group .login-button--primary:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 255, 0.2);
}
.login-form .login-button-group .login-button--default {
  background-color: #ffffff;
  color: #4aa3ff;
  border: 1px solid #4aa3ff;
}
.login-form .login-button-group .login-button--default:active {
  background-color: rgba(74, 163, 255, 0.1);
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
}
.login-form .login-actions {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.login-form .login-actions text {
  color: #4aa3ff;
  padding: 10rpx;
}
.login-form .login-actions text:active {
  opacity: 0.8;
}
@-webkit-keyframes fadeInUp {
from {
    opacity: 0;
    -webkit-transform: translateY(30rpx);
            transform: translateY(30rpx);
}
to {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes fadeInUp {
from {
    opacity: 0;
    -webkit-transform: translateY(30rpx);
            transform: translateY(30rpx);
}
to {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@-webkit-keyframes pulse {
0% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
50% {
    -webkit-transform: scale(1.05);
            transform: scale(1.05);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes pulse {
0% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
50% {
    -webkit-transform: scale(1.05);
            transform: scale(1.05);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
