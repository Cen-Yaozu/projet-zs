.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}
.form .avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.form .avatar-section .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 16rpx;
}
.form .avatar-section .upload-text {
  font-size: 24rpx;
  color: #666;
}
.form .form-item {
  margin-bottom: 30rpx;
}
.form .form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}
.form .form-item .input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}
.form .form-item .input:disabled {
  background: #f0f0f0;
  color: #999;
}
.form .submit-btn {
  width: 100%;
  height: 88rpx;
  background: #4aa3ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  border: none;
}
