<view class="login-container"><view class="login-background"><view class="login-shape login-shape--1"></view><view class="login-shape login-shape--2"></view><view class="login-shape login-shape--3"></view></view><view class="login-box"><view class="login-header"><image class="login-logo" src="/static/images/logo5.png" mode="aspectFit"></image><text class="login-title">用户登录</text><text class="login-subtitle">欢迎回来，请登录您的账号</text></view><view class="login-form"><view class="login-input-group"><view class="login-input-icon"><text class="iconfont icon-user"></text></view><input class="login-input" type="text" placeholder="请输入用户名" maxlength="30" focus="{{true}}" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['form']]]]]}}" value="{{form.username}}" bindinput="__e"/></view><view class="login-input-group"><view class="login-input-icon"><text class="iconfont icon-lock"></text></view><input class="login-input" type="{{showPassword?'text':'password'}}" placeholder="请输入密码" maxlength="30" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['form']]]]]}}" value="{{form.password}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['togglePasswordVisibility',['$event']]]]]}}" class="login-input-action" bindtap="__e"><text class="{{['iconfont',showPassword?'icon-eye':'icon-eye-off']}}"></text></view></view><view class="login-remember"><view data-event-opts="{{[['tap',[['toggleRemember',['$event']]]]]}}" class="login-remember-checkbox" bindtap="__e"><view class="{{[(remember)?'login-remember-checkbox--active':'']}}"></view></view><text>记住我</text></view><view class="login-button-group"><button data-event-opts="{{[['tap',[['handleLogin',['$event']]]]]}}" class="login-button login-button--primary" bindtap="__e"><text>登 录</text></button><button data-event-opts="{{[['tap',[['navigateTo',['/pages/my/register']]]]]}}" class="login-button login-button--default" bindtap="__e"><text>注 册</text></button></view><view class="login-actions"><text data-event-opts="{{[['tap',[['navigateTo',['/pages/my/forgot-password']]]]]}}" bindtap="__e">忘记密码?</text><text data-event-opts="{{[['tap',[['navigateTo',['/pages/index/index']]]]]}}" bindtap="__e">返回首页</text></view></view></view></view>