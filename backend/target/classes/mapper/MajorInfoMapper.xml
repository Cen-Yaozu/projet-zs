<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zs.mapper.MajorInfoMapper">
    <resultMap id="BaseResultMap" type="com.zs.entity.MajorInfo">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="school_id" property="schoolId" />
        <result column="category" property="category" />
        <result column="type" property="type" />
        <result column="description" property="description" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, school_id, category, type, description
    </sql>

    <insert id="insert" parameterType="com.zs.entity.MajorInfo">
        insert into major_info (name, school_id, category, type, description)
        values (#{name}, #{schoolId}, #{category}, #{type}, #{description})
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from major_info where id = #{id}
    </delete>

    <update id="update" parameterType="com.zs.entity.MajorInfo">
        update major_info
        set name = #{name},
            school_id = #{schoolId},
            category = #{category},
            type = #{type},
            description = #{description}
        where id = #{id}
    </update>

    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from major_info
        where id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from major_info
    </select>

    <select id="selectBySchoolId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from major_info
        where school_id = #{schoolId}
    </select>

    <select id="selectByName" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from major_info
        where name like concat('%', #{name}, '%')
    </select>

    <select id="selectByCategory" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from major_info
        where category = #{category}
    </select>

    <select id="selectByType" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from major_info
        where type = #{type}
    </select>
</mapper>